= content_for :page_title do
  .title
    %h1 Club
    %p
      %a#create-club-link{"data-target" => "#create_club", "data-toggle" => "modal", :href => "javascript:void(0);"} Create Your Own Club
      %span >>
= content_for :right_side do
  = render partial: "news_cal_side"
  

.rub-club{style: "background: url(#{@club.image}) no-repeat; height: 320px;"}
  %button.btn9= @club.city.name

%ul.sub-nav
  %li= link_to "Bulletin Board", "javascript:;", class: "current", "data-target" => "#bboard"
  %li= link_to "Members", "javascript:;", "data-target" => "#members"
  %li= link_to "About", "javascript:;", "data-target" => "#about"
  %li= link_to "Photos", "javascript:;", "data-target" => "#photos"

#bboard.tab-content
  .cent{style: "margin: 0; background-color: #f7f7f7;"}
    .post
      - if current_user.manage_club?(@club)
        = link_to "#post-form", class: "npost", data: {toggle: "modal"} do
          New Post
          %span >>
      &nbsp;
      %ul.lat-posts.top
        - @posts.each do |post|
          = render partial: "posts/post", locals: {post: post}
          
#members.members.tab-content.hide
  .filter
    %ul
      %li
        %span= "(#{@club.members.count}) Filter"
      %li= link_to "All", "javascript:;", class: "current", "data-target" => "#all-mems"
      %li= link_to "Alumni", "javascript:;", "data-target" => "#alumnis"
      %li= link_to "Students", "javascript:;", "data-target" => "#students"
      %li= link_to "Sponsors", "javascript:;", "data-target" => "#sponsors"
  %ul.mem
    #all-mems.filter-content= render partial: "clubs/members", locals: {members: @club.members}
    #alumnis.hide.filter-content= render partial: "clubs/members", locals: {members: @club.members.alumni}
    #students.hide.filter-content= render partial: "clubs/members", locals: {members: @club.members.student}
   
#about.members.tab-content.hide{:style => "padding-top:0;"}
  = render partial: "clubs/about"

#photos.members.tab-content.hide{:style => "padding:0; float:left; width:100%;"}
  %a#create-album-link.npost{"data-target" => "#create_album", "data-toggle" => "modal", :href => "#"} New Album >>
  - @club.albums.each do |album|
    .music
      %p
        = album.name
        %small= link_to "add images", "#album-#{album.id}-upload", "data-toggle" => "modal"
      .music-img
        = link_to "#album-#{album.id}", "data-toggle" => "modal" do
          = image_tag album.featured.image

#club-popup= render partial: 'clubs/form', locals: {club: Club.new}
#create-album-popup= render partial: 'albums/form', locals: {album: Album.new}

- @club.albums.each do |album|
  = render partial: "albums/show", locals: {album: album}
  = render partial: "albums/upload_images", locals: {album: album}
- new_post = @club.posts.build
= render partial: "posts/form", locals: {post: new_post}

- if current_user.manage_club?(@club)
  - new_update = @club.updates.build
  = render partial: 'updates/form', locals: {update: new_update}

:javascript
  $("document").ready(function(){
    $('.po-cm').click(function(){
      $(this).closest("li").find(".comments").toggleClass("hide");
    });

    $(".sub-nav li a").click(function(){
      $(this).closest('ul').find("a").removeClass('current');
      $(this).addClass('current');
      $('.tab-content').addClass("hide");
      $($(this).data("target")).removeClass('hide');
    });

    $(".filter a").click(function(){
      $(this).closest('ul').find("a").removeClass('current');
      $(this).addClass('current');
      $('.filter-content').addClass("hide");
      $($(this).data("target")).removeClass('hide');
    });

  });
