- @events.each do |event|
  .span12.top2{style: "margin-left: -30px; width: 103%;"}
    .span12.event-item
      .span12.left2.ev-title= link_to event.title, "#event#{event.id}_detail", :"data-toggle" => "modal"
      .span12.left2.bottom
        %strong Location
        = event.location
        %br
        %strong DateTime
        = event.date
        = " "
        = event.time
      .span12.ev-description.top= event.description
  = render partial: "university_events/event", locals: {event: event}
- if @events.blank?
  .page-title No events found.

= params[:at_time]