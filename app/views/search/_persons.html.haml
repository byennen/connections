.clearfix
%ul
  - @users.each do |user|
    %li.span3{style: "margin-left: 20px; margin-top: 50px;"}
      .users
        %a{href: user_path(user)}= image_tag (user.profile.image.xlarge)
        .hovers{style: "margin-left: 0;"}
          %p  Hi! I am another user from #{user.display_location} and I am excited about business
          = link_to user.full_name, user_path(user)
          - unless @user == current_user
            = link_to "Message", "#message-form", data: {toggle: "modal"}

%h3
  = "No results found" if @users.blank?