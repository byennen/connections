%ul
  - @users.each do |user|
    %li
      .users
        %a{href: user_path(user)}= image_tag (user.profile.image.xlarge)
        .hovers
          %p Hi! I am another user from chicago and i am excited about business
          = link_to user.full_name, user_path(user)
          - if @user == current_user
            = link_to "messages", "#message-form", data: {toggle: "modal"}, class: "btn btn-success btn-mini"
%h3
  = "No results found" if @users.blank?