%h1 Step 1: Register
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :first_name, :autofocus => true, :required => true
  = f.input :last_name, :required => true
  = f.input :email, :required => true
  = f.input :university_id, collection: University.all.sort_by(&:name)
  = f.input :location_id, collection: Location.all.sort_by(&:name), label: "Current Location"
  = f.input :graduation_year, collection: 2020.downto(1940).to_a
  = f.input :major
  = f.input :double_major
  = f.input :password, :required => true
  = f.input :password_confirmation, :required => true
  = f.button :submit, 'Sign up', :class => 'btn-primary'
= render "devise/shared/links"
