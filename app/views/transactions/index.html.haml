= content_for :header do
  .span12.bottom2.top2
    .span12.page-title.no-lmar
      = @club.name
      Transactions
    .span12.no-lmar
      .fright
        - if current_user.manage_club?(@club)
          = link_to "New Item", "#item-form", "data-toggle" => "modal", class: "btn btn-success", id: "new-item-link"
          - if @club.stripe_credential
            .green connected with stripe
          - else
            = link_to "Connect Stripe", "/auth/stripe_connect?club_id=#{@club.id}", class: "btn btn-success"
    .span12.bottom2.top2.no-lmar
    - @items.each do |item|
      .span12.no-lmar
        .span12.event-item
          .span12.left
            %h3= item.name
          .span12
            = item.description
          .span12
            - item.options.each do |opt|
              %strong= opt.name
              = opt.value
          .span6
            .top3.green transactions
          .span6.no-lmar
            .fright
              %strong= item.display_price
              %br
              = link_to "Purchase", "#card-form#{item.id}", "data-toggle" => "modal", class: "btn btn-success"
      = render partial: "checkout", locals: {item: item}
#item-popup=render partial: "items/form", locals: {item: @item}