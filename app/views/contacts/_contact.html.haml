%li
  .users
    %a{href: user_path(contact.relation)}= display_image contact.relation.profile.image, "xlarge"
    .hovers
      %p Hi! I am #{contact.relation.full_name} from #{contact.relation.display_city} and I am excited about business
      = link_to contact.relation.full_name, user_path(contact.relation)
      - if @user == current_user
        = link_to "Message", "#message-form", data: {toggle: "modal"}