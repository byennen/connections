%h5 List of University Events

#add_event.modal.hide
  = simple_form_for(university_university_events_path(@university, Event.new), html: {class: 'form-horizontal'}) do |f|
    .modal-header
      %button{type: "button", class: "close", data: {dismiss: "modal"}} &times;
      %h3 Add University Event
    .modal-body
      = f.input :title
      = f.input :date, input_html: {class: "datepicker"}
      = f.input :time, as: :time, ampm: true, minute_step: 5,default: {hour: 0, minute: 0},input_html: {style: "width: 80px"}
      = f.input :location
      = f.input :description, as: :text, input_html: {rows: 5}
      = f.input :category, as: :category
      = f.input :image, as: :file
      = f.input :free_food, :as => :boolean, :label => 'Free Food Event?'
    .clearfix
    .modal-footer
      = f.submit "Add Event", class: "btn btn-primary"

%ul
  - @university_events.each do |event|
    %li
      %strong
        = link_to event.title, university_university_event_path(@university, event)
      %em
        =event.date.to_date.strftime("%A, %B %e %Y at %g:%m %p")
        (
        = link_to 'delete', university_university_event_path(@university, event), :confirm => "Are you sure?", :method=>:delete if current_user.super_admin? || current_user.university_admin?
        )
        (
        - if current_user.super_admin? || current_user.university_admin?
          %a{href: "#edit_event_#{event.id}", data: {toggle: "modal"}} edit event
        )
        - if current_user.super_admin? || current_user.university_admin?
          %div{:id => "edit_event_#{event.id}", :class => "modal hide"}
            = simple_form_for event, url: university_university_event_path(@university, event.id), method: :put, class: 'form-horizontal' do |f|
              .modal-header
                %button{type: "button", class: "close", data: {dismiss: "modal"}} &times;
                %h3 Edit University Event
              .modal-body
                = f.input :title
                = f.input :date
                = f.input :time
                = f.input :location
                = f.input :description
                = f.input :category, as: :category
                = f.input :free_food, :as => :boolean, :label => 'Free Food Event?'
              .modal-footer
                = f.submit "Edit Event", class: "btn btn-primary"

.pull-right
  %a{href: "#add_event", class: "btn btn-primary", data: {toggle: "modal"}} Add Event