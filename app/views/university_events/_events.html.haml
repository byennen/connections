- @events.each do |event|
  .span10.top2{id: "event-#{event.id}"}
    .span11.event-item
      .span10.left2.ev-title= link_to event.title, "#event#{event.id}_detail", :"data-toggle" => "modal"
      .span10.ev-description.top= event.description
  = render partial: "event", locals: {event: event}
      
- if @events.blank?
  .offset1.page-title No events this day.