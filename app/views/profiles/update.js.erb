<% if @profile.errors.any? %>
  $('#bottom-alert').html('<%= @profile.errors.full_messages.join(". - ") %>')
<% else %>
  $('#bottom-alert').html('Profile was successfully updated')
<% end %>
$('#bottom-alert').fadeIn()
setTimeout("$('#bottom-alert').hide()", 1000);

$("#edit-profile").html("<%= escape_javascript(render('edit_form')) %>");

$(document).on('nested:fieldAdded:faqs', function(event){
  var field = event.field;
  field.find('.field-edit').fadeIn()
});

