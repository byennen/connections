.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"} }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "OnCahoots", root_path, :class => 'brand'
      .nav-collapse
        %ul.nav
          - if user_signed_in?
            - if current_user.super_admin? || current_user.university_admin?
              %li= link_to 'Admin', admin_root_path

            %li.dropdown
              %a#drop4.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                My Account
              %ul#menu1.dropdown-menu{"aria-labelledby" => "drop4", :role => "menu"}
                %li= link_to 'Edit Profile', edit_user_profile_path(current_user.id, current_user.profile.id) if current_user.profile.present?
                %li= link_to 'Settings', edit_user_registration_path
                %li= link_to 'Logout', destroy_user_session_path, :method=>'delete'
            %li
              = link_to "Professional Page", user_path(current_user)
          - else
            %li
              = link_to 'Login', new_user_session_path
            %li
              = link_to 'Register', new_user_registration_path


