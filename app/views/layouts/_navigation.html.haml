= link_to "Cahoots Connect", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li.dropdown
      %a#drop4.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
        My Account
      %ul#menu1.dropdown-menu{"aria-labelledby" => "drop4", :role => "menu"}
        %li= link_to 'Edit Profile', edit_user_profile_path(current_user.id, current_user.profile.id) unless params[:controller] == 'profiles' && params[:action] == 'new'
        %li= link_to 'Settings', edit_user_registration_path
        %li= link_to 'Logout', destroy_user_session_path, :method=>'delete'
    - if current_user.has_role? :admin
      %li
        = link_to 'Admin', users_path
  - else
    %li
      = link_to 'Login', new_user_session_path
    %li
      = link_to 'Register', new_user_registration_path
