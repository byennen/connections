!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{content: "initial-scale=1, width=device-width, maximum-scale=1, minimum-scale=1, user-scalable=no", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Cahoots Connect".html_safe
    %meta{:content => content_for?(:description) ? yield(:description) : "Cahoots Connect", :name => "description"}
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = javascript_include_tag "application"
    = javascript_include_tag 'plugins/jquery.onepage-scroll.min'
    = javascript_include_tag 'home'
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag 'plugins/onepage-scroll', 'onepage-scroll'
    = csrf_meta_tags
    = yield(:head)
  %body{:id => "#{controller_name}-#{action_name}"}
    = render 'layouts/messages'
    .wrapper
      .main
        = yield
