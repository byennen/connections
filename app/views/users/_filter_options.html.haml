.span2.no-lmar
  = text_field_tag :name, "",class: "field", placeholder: "Name", style: "width: 80%"

.span2.no-lmar
  = text_field_tag :major, "", class: "field", style: "width: 80%", placeholder: "Major"
.span2.no-lmar.dropdown
  %a.btn.btn-success.btn2.chang.dropdown-toggle{:href => "javascript:;", :"data-toggle" => 'dropdown'}
    %i
      = image_tag "old_images/dropdown-arrow.png"
  %ul.dropdown-menu{style: "margin: -10px 0 0 22px"}
    %li
      %a Any Year
    - (Date.today.year + 7).downto(1940).to_a.each do |year|
      %li
        %a= year

  = select_tag :graduation_year, options_for_select(2020.downto(1940).to_a), {value: "", prompt: "Graduation Year", class: "field"}

.span2.no-lmar.dropdown
  %a.btn.btn-success.btn2.chang.dropdown-toggle{:href => "javascript:;", :"data-toggle" => 'dropdown'}
    %i
      = image_tag "old_images/dropdown-arrow.png"
  %ul.dropdown-menu{style: "margin: -10px 0 0 22px"}
    %li
      %a= "All Fields"
    - ProfessionalField.order(:name).each do |field|
      %li
        %a= field.name

  = text_field_tag :professional_field, "", class: "field dropdown-toggle", :"data-toggle" => 'dropdown', placeholder: "Field"
