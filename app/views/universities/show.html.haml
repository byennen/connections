%h1
  Welcome to
  = @university.name
%p
  %b Mascot:
  = @university.mascot
%p
  %b Location:
  = @university.location

%h2 Users
- @users.each do |user|
  = link_to user.full_name, user_path(user) if user.present?

%h3 Updates
- @updates.each do |update|
  = update.body
  %br
  = update.created_at.to_date
%hr
= link_to 'New Update', '', :class => 'btn btn-primary', "data-toggle" => "modal", :href => "#new_update", :type => "button"
= render 'update'
