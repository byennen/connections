%h1
  Welcome to
  = @university.name
  = image_tag @university.image_url if @university.image?

%p
  %b Mascot:
  = @university.mascot
%p
  %b Location:
  = @university.location

%h2 Users
%ul
- @users.each do |user|
  %li= link_to user.full_name, user_path(user) if user.present?

%h3 Clubs
= link_to "Create A New Club", new_university_club_path(@university)
- if @clubs.present?
  %ul
    - @clubs.each do |club|
      %li= link_to club.name, university_club_path(@university, club)

%h3 Updates
%ul.unstyled
  - @updates.each do |update|
    %li
      = image_tag update.image_url if update.image?
      = update.body
      %br
      = update.created_at.to_date
  - @club_updates.each do |update|
    - if current_user && update.updateable.memberships.map(&:user_id).include?(current_user.id)
      %li 
        .row-fluid
          .span1= image_tag update.updateable.image.thumb.url
          .span11
            %h4= update.updateable.name
        %br
        = image_tag update.image_url if update.image?
        %strong= update.headline
        %br
        = update.created_at.to_date
        %br
        =update.body

%hr

- if current_user.present?
  - if current_user.super_admin? || current_user.university_admin?
    = link_to "New Update", [:new, @updateable, :update], :class => 'btn btn-primary'
