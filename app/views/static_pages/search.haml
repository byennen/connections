    %input.bigf{:name => "text", :placeholder => "SEARCH TERMS", :type => "text"}/
    %ul.tabsx
      %li.activex
        %a{:href => "#tab1x"} students
      %li
        %a{:href => "#tab2x"} alumni
      %li
