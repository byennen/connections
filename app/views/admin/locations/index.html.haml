.row
  .col-sm-12
    %h1 Locations
    %table.table.table-hover
      %thead
        %tr
          %th Name
          %th
          %th
          %th

      - @locations.each do |location|
        %tbody
          %tr
            %td= location.name
            %td= link_to 'Edit', edit_admin_location_path(location), class: 'btn btn-default btn-xs'
            %td= link_to 'Destroy', admin_location_path(location), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-default btn-xs'
    %hr
    .form-group
      .col-sm-12
        = link_to 'New Location', new_admin_location_path, class: 'btn btn-primary'
