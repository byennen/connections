.modal.fade{:id => "role-options-#{user.id}"}
  = simple_form_for user, :url => admin_user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"}
          %h4.modal-title Change Role
        .modal-body
          = f.input :role_ids, :collection => Role.all, :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline', checked: user.role_ids.first
        .modal-footer
          = f.submit "Change Role", :class => "btn btn-primary"
