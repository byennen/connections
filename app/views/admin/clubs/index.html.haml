%h1 Listing clubs

%table.table.table-condensed
  %tr
    %th Name
    %th Category
    %th Description
    %th
    %th
    %th

  - @clubs.each do |club|
    %tbody
      %tr
        %td= club.name
        %td= club.category
        %td= club.description
        %td= link_to 'Show', club
        %td= link_to 'Edit', edit_admin_club_path(club)
        %td= link_to 'Destroy', admin_club_path(club), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Club', new_admin_club_path, class: 'btn'
